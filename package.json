{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "A nodejs boilerplate for building a REST API with express. It uses Typescript, Postgres with Prima ORM, Vitest for testing.",
  "main": "src/server.js",
  "repository": "https://github.com/lunsmat/nodejs-boilerplate",
  "author": "Luan Farias <luan.farias@icen.ufpa.br>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "migrate": "prisma migrate dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@prisma/client": "4.3.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "vite-tsconfig-paths": "^3.5.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/node": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.21",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitest/coverage-c8": "^0.23.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.24.0",
    "prisma": "^4.3.1",
    "supertest": "^6.2.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3",
    "vitest": "^0.23.4"
  }
}
